<div class="text-center">
  <h2>{{post.title}}</h2>
  <p>Created by {{post.user.username}} on {{format_date post.date_created}}</p>
  <p>{{post.content}}</p>
  <h3>Comments:</h3>
  {{#each post.comments as |comment| }}
    <p>
      {{comment.content}}
    </p>
    <p>Created by {{comment.user.username}} on {{format_date comment.date_created}}</p>
    {{/each}}
</div>
  <div id = "post-id" data-id="{{post.id}}" > </div>
  <div>
    {{#if logged_in}}
    <div class="col-md-6">
    <h3>Create a New Comment:</h3>

    <form class="form comment-form">

      <div class="form-group">
        <label for="comment-content">content:</label>
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
    </div>
  </div>
  
</div>
{{/if}}

<script src="./../js/post.js"></script>